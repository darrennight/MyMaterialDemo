<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_new_month_cal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="RecyclerView日历 月模式  recycle new"

        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_new_week_cal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="RecyclerView日历 星期模式 recycle new"

        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="日历 viewpager"

        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dash_board"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="仪表盘"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_round_board"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="圆盘"
        />
</LinearLayout>