<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fr_bi_setting_list_item_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fr_bi_setting_item_height"
        android:layout_marginLeft="@dimen/fr_bi_setting_item_padding"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fr_bi_setting_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/fr_icon_selected"/>

        <TextView
            android:id="@+id/fr_bi_setting_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/fr_bi_setting_item_text_size"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/fr_bi_setting_order_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fr_bi_setting_item_height"
        android:layout_marginRight="@dimen/fr_bi_setting_item_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fr_bi_setting_item_div"/>

</RelativeLayout>