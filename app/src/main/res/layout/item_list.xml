            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="测试文字"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>
    </LinearLayout>
</LinearLayout>