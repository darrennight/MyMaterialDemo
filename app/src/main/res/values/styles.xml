    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->

    </style>
    <style name="WeChatActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <!-- Actionbar color -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#4876FF</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#3A5FCD</item>
        <!-- 标题文字颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/window_background</item>
        <!--修改左侧控制按钮drawlayout 颜色-->
        <item name="colorControlNormal">@android:color/holo_blue_bright</item>
        <!--修改右侧oberflow图标-->
        <item name="actionOverflowButtonStyle">@style/WeChatActionButtonOverflow</item>
        <!--floatingbutton tablayout底部标示线  的颜色-->
        <item name="colorAccent">@android:color/black</item>


    </style>

    <style name="SplashStyle" parent="AppBaseTheme">
        <item name="android:background">@color/color_bread_blue</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BlankTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
